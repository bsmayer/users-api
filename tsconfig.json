{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6"
        ],
        "types": [
            "reflect-metadata",
            "node",
            "jest"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}